<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.conzumex.clockrangepicker.TimeRangePicker
        android:id="@+id/picker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trp_clockFace="SAMSUNG"
        app:trp_clockLabelColor="#989b9b"
        app:trp_clockLabelSize="12sp"
        app:trp_endTime="6:00"
        app:trp_hourFormat="FORMAT_24"
        app:trp_sliderColor="#989b9b"
        app:trp_sliderRangeColor="#EF0053"
        app:trp_sliderWidth="28dp"
        app:trp_sliderRangeWidth="20dp"
        app:trp_startTime="22:00"
        app:trp_stepTimeMinutes="10"
        app:trp_thumbColor="#000000"
        app:trp_thumbIconEnd="@drawable/ic_clear_black_24dp"
        app:trp_thumbIconSize="10dp"
        app:trp_thumbIconStart="@drawable/ic_backspace_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>