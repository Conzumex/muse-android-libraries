<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleSeekBar">
        <attr name="csb_progress" format="integer"/>
        <attr name="csb_secondary_progress" format="integer"/>
        <attr name="csb_min" format="integer"/>
        <attr name="csb_rangeStart" format="integer"/>
        <attr name="csb_rangeEnd" format="integer"/>
        <attr name="csb_max" format="integer"/>
        <attr name="csb_step" format="integer"/>
        <attr name="csb_range_distance" format="integer"/>
        <attr name="csb_cap_adjustment" format="integer"/>

        <attr name="csb_thumbDrawable" format="reference"/>
        <attr name="csb_thumbSize" format="dimension" />
        <attr name="csb_rangeCircleSize" format="dimension" />
        <attr name="csb_rangeEraseOffset" format="float" />
        <attr name="csb_rangeValueOffset" format="float" />

        <attr name="csb_progressColor" format="color"/>
        <attr name="csb_secondaryprogressColor" format="color"/>
        <attr name="csb_dash_line_color" format="color"/>
        <attr name="csb_progressWidth" format="dimension"/>

        <attr name="csb_arcColor" format="color"/>
        <attr name="csb_rangeColor" format="color"/>
        <attr name="csb_arcWidth" format="dimension"/>
        <attr name="csb_rangeWidth" format="dimension"/>

        <attr name="csb_textSize" format="dimension"/>
        <attr name="csb_rangeTextSize" format="dimension"/>
        <attr name="csb_textColor" format="color"/>

        <attr name="csb_isShowText" format="boolean" />
        <attr name="csb_isShowThumb" format="boolean" />
        <attr name="csb_isShowRange" format="boolean" />
        <attr name="csb_isShowRangeText" format="boolean" />
        <attr name="csb_isClickable" format="boolean" />

    </declare-styleable>

    <declare-styleable name="DropletSeekBar">
        <attr name="currentProgress" format="integer"/>
        <attr name="thumbDrawable" format="reference"/>
        <attr name="thumbSize" format="dimension" />
        <!-- Pass gradient Colors as colors array -->
        <attr name="gradientColors" format="reference" />
    </declare-styleable>

</resources>