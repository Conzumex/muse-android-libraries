<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedProgressBar">
        <attr name="rpbProgress" format="integer" />

        <attr name="rpbProgressColor" format="reference|color" />
        <attr name="rpbBackgroundColor" format="reference|color" />
        <attr name="rpbProgressTextColor" format="reference|color" />
        <attr name="rpbBackgroundTextColor" format="reference|color" />

        <attr name="rpbCornerRadius" format="dimension" />
        <attr name="rpbCornerRadiusTopLeft" format="dimension" />
        <attr name="rpbCornerRadiusTopRight" format="dimension" />
        <attr name="rpbCornerRadiusBottomRight" format="dimension" />
        <attr name="rpbCornerRadiusBottomLeft" format="dimension" />

        <attr name="rpbTextSize" format="dimension" />
        <attr name="rpbRelativeMax" format="integer" />
        <attr name="rpbTextPadding" format="dimension" />
        <attr name="rpbCustomFontPath" format="reference" />
        <attr name="rpbFontFamily" format="reference" />
        <attr name="rpbAnimationLength" format="integer" />

        <attr name="rpbShowProgressText" format="boolean" />
        <attr name="rpbIsRadiusRestricted" format="boolean" />
    </declare-styleable>


    <attr name="barHeight" format="dimension" />
    <attr name="cornerRadius" format="dimension" />
    <attr name="selectedPos" format="integer" />
    <attr name="selectedFont" format="reference" />
    <attr name="unSelectedFont" format="reference" />
    <attr name="selectedProgressColor" format="reference|color" />
    <attr name="unSelectedProgressColor" format="reference|color" />
    <attr name="selectedProgressBackgroundColor" format="reference|color" />
    <attr name="unSelectedProgressBackgroundColor" format="reference|color" />
    <attr name="selectedLabelColor" format="reference|color" />
    <attr name="unSelectedLabelColor" format="reference|color" />
    <attr name="selectedProgressTextColor" format="reference|color" />
    <attr name="unSelectedProgressTextColor" format="reference|color" />
    <attr name="progressDrawable" format="reference" />

    <declare-styleable name="ProgressBarGraphChart">
        <attr name="barHeight"/>
        <attr name="cornerRadius"/>
        <attr name="selectedPos"/>
        <attr name="selectedFont"/>
        <attr name="unSelectedFont"/>
        <attr name="selectedProgressColor"/>
        <attr name="unSelectedProgressColor"/>
        <attr name="selectedProgressBackgroundColor"/>
        <attr name="unSelectedProgressBackgroundColor"/>
        <attr name="selectedLabelColor"/>
        <attr name="unSelectedLabelColor"/>
        <attr name="selectedProgressTextColor"/>
        <attr name="unSelectedProgressTextColor"/>
    </declare-styleable>
    <declare-styleable name="ProgressRoundGraphChart">
        <attr name="cornerRadius"/>
        <attr name="selectedPos"/>
        <attr name="selectedFont"/>
        <attr name="unSelectedFont"/>
        <attr name="selectedProgressColor"/>
        <attr name="unSelectedProgressColor"/>
        <attr name="progressDrawable"/>
        <attr name="selectedLabelColor"/>
        <attr name="unSelectedLabelColor"/>
        <attr name="selectedProgressTextColor"/>
        <attr name="unSelectedProgressTextColor"/>
        <attr name="selectedProgressTextSize" format="dimension"/>
        <attr name="unSelectedProgressTextSize" format="dimension"/>
    </declare-styleable>
</resources>